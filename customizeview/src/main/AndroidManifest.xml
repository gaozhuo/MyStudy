<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gaozhuo.customizeview">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CircleActivity" />
        <activity android:name=".FloatingWindowActivity" />
        <activity android:name=".HorizontalScrollViewExActivity" />
        <activity android:name=".FlowLayoutActivity" />
        <activity android:name=".LockViewActivity" />
        <activity android:name=".StickyLayoutActivity" />
        <activity android:name=".LeftDrawerLayoutActivity"></activity>
    </application>

</manifest>