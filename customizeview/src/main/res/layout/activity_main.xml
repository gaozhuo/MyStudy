<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gaozhuo.customizeview.MainActivity">

    <Button
        android:id="@+id/circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简单圆" />

    <Button
        android:id="@+id/floatingWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="浮窗" />

    <Button
        android:id="@+id/horizontalScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HorizontalScrollViewEx" />

    <Button
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FlowLayout" />

    <Button
        android:id="@+id/lockView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lock View" />

    <Button
        android:id="@+id/stickyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StickyLayout" />


</LinearLayout>
