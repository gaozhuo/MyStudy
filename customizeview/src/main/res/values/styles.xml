<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="SimpleCircle">
        <attr name="circle_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="LockView">
        <attr name="lock_lineColor" format="color"/>
        <attr name="lock_lineWidth" format="dimension"/>
        <attr name="lock_nodeSize" format="dimension"/>
        <attr name="lock_normalNodeDrawable" format="color|reference"/>
        <attr name="lock_activatedNodeDrawable" format="color|reference"/>
        <attr name="lock_errorNodeDrawable" format="color|reference"/>
        <attr name="lock_activatedAnimRes" format="reference"/>
        <attr name="lock_errorAnimRes" format="reference"/>
        <attr name="lock_vibrateTime" format="integer"/>
        <attr name="lock_enableVibrate" format="boolean"/>
    </declare-styleable>

</resources>
